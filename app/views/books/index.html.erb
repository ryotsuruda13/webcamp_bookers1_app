<% if flash[:notice] %>
  <p id="notice">
    <%= flash[:notice] %>
  </p>
<% end %>

<h1>Books</h1>
<div class="lists">
  <table>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
    <% @books.each do |book| %>
    <tr>
      <td>
        <%= book.title %>
      </td>
      <td>
        <%= book.body %>
      </td>
      <td>
        <%= link_to "Show", "/books/#{book.id}" %>
        <%= link_to "Edit", "/books/#{book.id}/edit" %>
        <%= link_to "Destroy", "/books/#{book.id}", method: :delete %>
      </td>
    </tr>
  <% end %>
  </table>
</div>

<h2>New book</h2>

<% if @book.errors.any? %>
  <%= @book.errors.count %> error prohibited this book from being saved:
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<div class="form">
  <%= form_with model:@book, url:'/books', local:true do |f| %>
    <p>Title</p>
    <%= f.text_field :title %>
    <p>Body</p>
    <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>
</div>
